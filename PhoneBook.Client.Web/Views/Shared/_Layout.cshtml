<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Phone Book</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/angularjs")
</head>
<body data-ng-app="appMain">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Phone Book", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Phone Book</p>
        </footer>
    </div>

    <script type="text/javascript">
        window.PhoneBook = {};
        (function (pb) {
            var rootPath;
            pb.rootPath = rootPath;
        }(window.PhoneBook));
        PhoneBook.rootPath = '@Url.Content("~")';
    </script>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="@Url.Content("~/Scripts/App.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
